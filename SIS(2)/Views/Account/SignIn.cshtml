@{
}
@model LoginViewModel
@{
    ViewData["Title"] = "SignIn";
    ViewData["ExcludeNavbar"] = true;
}
<html lang="en" dir="ltr">
<head>
    <meta charset="UTF-8">
    <title> SignIn </title>
    <link rel="stylesheet" href="~/css/style.css">
    <!-- Fontawesome CDN Link -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.3/css/all.min.css">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
</head>
<body>
    <div class="container">
        <input type="checkbox" id="flip">
        <div class="cover">
            <div class="front">
                <img src="~/css/images/Sign up-amico.png" alt="" />
            </div>

        </div>
        <div class="forms">
            <div class="form-content">
                <div class="login-form">
                    <div class="title">SignUp</div>
                    <form asp-action="SignIn" method="post">
                        @Html.AntiForgeryToken()
                        <div class="input-boxes">
                            <div class="input-box">
                                <i class="fas fa-envelope"></i>
                                <input asp-for="Email" placeholder="Enter your email" required>
                                <span asp-validation-for="Email"></span>
                            </div>
                            <div class="input-box">
                                <i class="fas fa-lock"></i>
                                <input asp-for="Password" type="password" placeholder="Enter your password" required>
                                <span asp-validation-for="Password"></span>
                            </div>
                            
                            <div class="button input-box">
                                <input type="submit" value="Submit">
                            </div>
                            <div class="text sign-up-text">Already have an account? <a href="~/Account/Login">Sign in now</a></div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</body>
</html>
